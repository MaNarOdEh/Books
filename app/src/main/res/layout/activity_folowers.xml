<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/follow_bg"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circle"
            android:src="@drawable/user"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Following"
            android:background="@color/colorButton"
            android:textColor="@android:color/white"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Followers"
            android:textColor="@color/colorButton"
            android:background="@android:color/white"
            />

    </LinearLayout>
<!--<include layout="@layout/follow"/>-->


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingStart="25dp"
                android:paddingTop="25dp"
                android:paddingEnd="25dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/maha"
                    app:civ_border_color="#d7d7d7"
                    app:civ_border_width="2dp"
                    app:civ_border_overlay="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="70dp">
                    <TextView
                        android:id="@+id/employee_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manar OdEh"
                        android:fontFamily="casual"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:layout_marginStart="4dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="8dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="#dcdcdc"
                            android:src="@drawable/telephone"
                            android:layout_marginEnd="8dp"
                            />
                        <TextView
                            android:id="@+id/employee_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0597853325"
                            />

                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_contact"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/colorButton"
                    android:text="contact"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:layout_marginBottom="8dp"/>
                <Button
                    android:id="@+id/btn_view_profile"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:textSize="11sp"
                    android:background="@android:color/transparent"
                    android:text="See Profile"
                    android:textAllCaps="false"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="100dp"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
