<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="60dp"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Directions "
                android:textSize="26sp"
                android:fontFamily="cursive"
               />
            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_black_24dp"
                android:tint="@color/colorButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/books"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_search_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/searching"
                android:backgroundTint="@color/colorButton"
                app:borderWidth="0dp"
                android:layout_marginEnd="8dp"
                />
            <Button
                android:id="@+id/btn_search_cook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Search For A Book"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorButton"
                android:fontFamily="cursive"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_btn_exchange_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feedback"
                android:backgroundTint="@android:color/white"
                app:borderWidth="0dp"
                android:layout_marginEnd="8dp"
                />
            <Button
                android:id="@+id/btn_exchange_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="@string/exchnage_book"
                android:textAllCaps="false"
                android:backgroundTint="@android:color/white"
                android:fontFamily="cursive"
                android:textSize="22sp"
                android:textColor="@color/colorButton"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_suggestion_books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/searching"
                android:backgroundTint="@color/colorButton"
                app:borderWidth="0dp"
                android:layout_marginEnd="8dp"
                />
            <Button
                android:id="@+id/btn_suggestion_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Suggestion a Book"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorButton"
                android:textColor="@android:color/white"
                android:fontFamily="cursive"
                android:textSize="22sp"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorButton"
                    app:borderWidth="0dp"
                    android:src="@drawable/notification"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorButton"
                    app:borderWidth="0dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/fireworks"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="right|bottom"
            android:layout_marginEnd="20dp"
            >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_log_out"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            app:fabSize="mini"
            android:src="@drawable/ic_call_missed_outgoing_black_24dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorButton"
            app:borderWidth="0dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            android:src="@drawable/user"
            app:fabSize="mini"
            android:tint="@android:color/white"
            android:backgroundTint="@color/colorButton"
            app:borderWidth="0dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_menu_black_24dp"
            android:backgroundTint="@color/colorButton"
            app:borderWidth="0dp"
            />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>